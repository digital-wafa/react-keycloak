{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist",
		"module": "es6",
		"noImplicitAny": true,
		"outDir": "./dist",
        "target": "es2015",
		"moduleResolution": "node",
		"jsx": "react",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include":["src/**/*"]
}